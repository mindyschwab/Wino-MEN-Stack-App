<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Add a Listing | Ceramics Express Store' }) %>
        <!-- <link rel="stylesheet" href="/styles/product-form.css"> -->
</head>

<body>
    <%- include('../partials/nav.ejs') %>

        <h1 class="new-wine-h1">Add a New Wine</h1>

        <form method="POST" action="/wines">
            <!-- Name input -->
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
            <br>
            <!-- Style input -->
            <label for="style">Style:</label>
            <select id="style" name="style" value="0" required>
                <option value="Red">Red</option>
                <option value="White">White</option>
                <option value="Rose">Rose</option>
                <option value="Sparkling">Sparkling</option>

            </select>
            <br>
            <!-- Type input -->
            <label for="type">Type:</label>
            <input type="text" id="type" name="type" placeholder="Cabernet Sauvignon" required>
            <br>
            <!-- Producer input -->
            <label for="producer">Producer:</label>
            <input type="text" id="producer" name="producer" required>
            <br>
            <!-- Region input -->
            <label for="region">Region:</label>
            <input type="text" id="region" name="region" required>
            <br>
            <!-- Year Input -->
            <label for="year">Year:</label>
            <input type="number" id="year" name="year" min="1900" max="2023" required>
            <br>
            <!-- Rating input -->
            <label for="averageRating">Rating:</label>
            <input type="number" id="averageRating" name="averageRating" step="0.1" min="0" max="5" placeholder="4.0"
                required>
            <br>
            <!-- ABV input -->
            <label for="abv">ABV:</label>
            <input type="number" id="abv" name="abv" min="0" step="0.01" placeholder="12.0" required>
            <br>
            <!-- Photo input -->
            <label for="photo">Photo (URL):</label>
            <input type="text" id="photo" name="photo" required>
            <br>
            <!-- Description input -->
            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea>
            <br>
            <!-- isFeatured input -->
            <label for="isFeatured">Do you want to feature this wine on the home page?</label>
            <br>
            <select id="isFeatured" name="isFeatured">
                <option value="true">Yes</option>
                <option value="false">No </option>

                <input type="submit" value="Add New Wine">
        </form>

        <%- include('../partials/footer.ejs') %>
</body>

</html>