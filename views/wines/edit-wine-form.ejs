<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: `Edit ${wine.name} | WINO`}) %>
        <!-- <link rel="stylesheet" href="/styles/product-form.css"> -->
</head>

<body>
    <%- include('../partials/nav.ejs') %>

        <h1>Edit Wine Details Form</h1>
        <form method="POST" action="/wines/<%= wine._id %>?_method=PUT">
            <!-- Name input -->
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= wine.name %>" required>
            <br>
            <!-- Style input -->
            <label for="style">Style:</label>
            <select id="style" name="style" value="<%= wine.style %>" required>

                <% if (wine.style==="Red" ) { %>
                    <option value="Red" selected>Red</option>
                    <option value="White">White</option>
                    <option value="Rose">Rose</option>
                    <option value="Sparkling">Sparkling</option>

                    <% } else if (wine.style==="White" ) { %>
                        <option value="Red">Red</option>
                        <option value="White" selected>White</option>
                        <option value="Rose">Rose</option>
                        <option value="Sparkling">Sparkling</option>

                        <% } else if (wine.style==="Rose" ) { %>
                            <option value="Red">Red</option>
                            <option value="White">White</option>
                            <option value="Rose" selected>Rose</option>
                            <option value="Sparkling">Sparkling</option>

                            <% } else { %>
                                <option value="Red">Red</option>
                                <option value="White">White</option>
                                <option value="Rose" selected>Rose</option>
                                <option value="Sparkling" selected></option>>Sparkling</option>
                                <% } %>
                                    <option value="Red">Red</option>
                                    <option value="White">White</option>
                                    <option value="Rose">Rose</option>
                                    <option value="Sparkling">Sparkling</option>
            </select>
            <br>
            <!-- Type input -->
            <label for="type">Type:</label>
            <input type="text" id="type" name="type" value="<%= wine.type %>" required>
            <br>
            <!-- Producer input -->
            <label for="producer">Producer:</label>
            <input type="text" id="producer" name="producer" value="<%= wine.producer %>" required>
            <br>
            <!-- Region input -->
            <label for="region">Region:</label>
            <input type="text" id="region" name="region" value="<%= wine.region %>" required>
            <br>
            <!-- Year Input -->
            <label for="year">Year:</label>
            <input type="number" id="year" name="year" min="1900" max="2023" value="<%= wine.year %>" required>
            <br>
            <!-- Rating input -->
            <label for="averageRating">Rating:</label>
            <input type="number" id="averageRating" name="averageRating" step="0.1" min="0" max="5"
                value="<% wine.averageRating %>" required>
            <br>
            <!-- ABV input -->
            <label for="abv">ABV:</label>
            <input type="number" id="abv" name="abv" min="0" step="0.01" value="<%= wine.abv %>" required>
            <br>
            <!-- Photo input -->
            <label for="photo">Photo (URL):</label>
            <input type="text" id="photo" name="photo" value="<%= wine.photo %>" required>
            <br>
            <!-- Description input -->
            <label for="description">Description:</label>
            <textarea id="description" name="description" required><%= wine.description %> required></textarea>
            <br>

            <input type="submit" value="Update Wine Data">
        </form>

        <%- include('../partials/footer.ejs') %>
</body>

</html>